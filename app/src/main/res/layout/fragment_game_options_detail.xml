<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/number_of_players_caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding"
        android:textIsSelectable="false" />

    <TextView
        android:id="@+id/number_of_players"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/number_of_players_caption" />

    <SeekBar
        android:id="@+id/number_of_players_seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/number_of_players"
        android:padding="@dimen/padding" />

    <TextView
        android:id="@+id/number_of_moves_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/number_of_players_seek_bar"
        android:padding="@dimen/padding" />

    <TextView
        android:id="@+id/number_of_moves"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/number_of_moves_caption" />

    <SeekBar
        android:id="@+id/number_of_moves_seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/number_of_moves"
        android:padding="@dimen/padding" />
</RelativeLayout>