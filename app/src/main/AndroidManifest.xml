<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rozdy.epidemy">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.MainMenuActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.GameBoardActivity"
            android:label="@string/title_activity_game_board"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.rozdy.epidemy.ui.MainMenuActivity" />
        </activity>
        <activity
            android:name=".ui.options.OptionsListActivity"
            android:label="@string/title_options_list"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.rozdy.epidemy.ui.MainMenuActivity" />
        </activity>
        <activity
            android:name=".ui.FinalStatsActivity"
            android:label="@string/title_activity_final_stats"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.rozdy.epidemy.ui.MainMenuActivity" />
        </activity>
        <activity
            android:name=".ui.HelpActivity"
            android:label="@string/title_activity_help">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.rozdy.epidemy.ui.MainMenuActivity" />
        </activity>
    </application>

</manifest>
