<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sorry.no.domain.test_project">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.MainMenuActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.GameBoardActivity"
            android:label="@string/title_activity_game_board">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.MainMenuActivity" />
        </activity>
        <activity
            android:name=".ui.OptionsListActivity"
            android:label="@string/title_options_list"></activity>
        <activity
            android:name=".ui.OptionsDetailActivity"
            android:label="@string/title_options_detail"
            android:parentActivityName=".ui.OptionsListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="sorry.no.domain.test_project.ui.OptionsListActivity" />
        </activity>
    </application>

</manifest>
